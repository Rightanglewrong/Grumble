<%- include('../partials/header') %> 
<h4 class="center">Recipe List</h4>
<table class="center">
    <thead class="table">
        <tr>
            <td>Title</td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>
        <% recipes.forEach(function(recipe){ %>

        <tr>
            <td><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></td>
            <td><%= recipe.description %></td>
        </tr>
        <% }) %>
        <tr>
            <td>
                <button><a href="/recipes/new">Add a recipe</a></button>
            </td>
        </tr>
    </tbody>
    
</table>

<%- include('../partials/footer') %> 