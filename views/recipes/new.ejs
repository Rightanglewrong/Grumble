<%- include('../partials/header') %>
<div class="row">
  <div class="card deep-orange lighten-2 z-depth-5">
    <div class="card-content black-text center">
      <span class="card-title">What's the Recipe?</span>
      <form class="form" id="add-recipe" action="/recipes/" method="POST">
      <label>Name of Dish</label>
      <input
      type="text"
      id="dish-name"
      name="name"
      required="true"
      autocomplete="off"
      placeholder="Dish"
      />
      <label>Description</label>
      <textarea
        type="text"
        id="dish-description"
        name="description"
        class="vertical"
        placeholder="Tell me about it"
      ></textarea>
      <label>Steps</label>
      <textarea
      type="text"
      id="dish-steps"
      name="steps"
      class="vertical"
      placeholder="How do we make it?"
    ></textarea>
    <button class="lime-text text-lighten-3 btn-small" type="submit">Add to Recipe</button>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
